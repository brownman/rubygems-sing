# -*- ruby -*-

require 'rubygems'
require 'hoe'

Hoe.plugin :seattlerb
Hoe.plugin :rubyforge # for the time being

Hoe.spec 'rubygems-sing' do
  developer 'Ryan Davis', 'ryand-ruby@zenspider.com'

  extra_deps << ['midiator', '~> 0.3.2']

  self.rubyforge_name = 'seattlerb'
end

